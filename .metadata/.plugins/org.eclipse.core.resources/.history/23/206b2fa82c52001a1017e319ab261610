package hello;

import java.util.Arrays;

public class ArrayTest {

	public static void main(String[] args) {
		int[] a;
		a = new int[5];
		int[] b = new int[5];
		a[0] = 1;
		a[1] = 2;
		a[2] = 3;
		a[3] = 4;
		a[4] = 5;
		System.out.println(a.length);
		a[4] = 100;
//		a[5] = 101;
		
		int[] a1 = new int[5];
		System.out.println(a1[0]);
		
		int[] a2 = new int[]{1,2,3,4,5};
		int[] b2 = {1,2,3,4,5};
//		int[] c = new int[3]{1,2,3};
		
		int a3[] = new int[]{18,23,53,21,34};
		for(int i = 0;i < a3.length;i++){
			System.out.print(a3[i] + " ");
		}
		System.out.println(" ");
		for(int j = 0;j < a3.length - 1;j++){
			for(int i = j + 1;i < a3.length;i++){
				if(a3[i] < a3[j]){
					int temp = a3[j];
					a3[j] = a3[i];
					a3[i] = temp;
				}
			}
		}
		for(int i = 0;i < a3.length;i++){
			System.out.print(a3[i] + " ");
		}
		System.out.println(" ");
		
		int a4[] = new int[]{18,23,53,21,34};
		for(int i = 0;i < a4.length;i++){
			System.out.print(a4[i] + " ");
		}
		System.out.println(" ");
		
		for(int j = 0;j < a4.length;j++){
			for(int i = 0;i < a4.length - 1;i++){
				if(a4[i] > a4[i+1]){
					int temp = a4[i];
					a4[i] = a4[i+1];
					a4[i+1] = temp;
				}
			}
		}
		for (int i = 0; i < a4.length; i++) {
			System.out.print(a4[i] + " ");
		}
		System.out.println(" ");
		
		
		int values[] = new int[]{18,32,21,35,653};
		for (int each : values) {
			System.out.println(each);
		}
		
		
		int a5[] = new int[]{33,21,35,36,67};
		int b5[] = new int[3];
		System.arraycopy(a5, 0, b5, 0, 3);
		for(int i:b5){
			System.out.print(i + " ");
		}
		
		
		int[][] a6 = new int[2][3];
		a6[1][2] = 5;
		
		int[][] b6 = new int[2][];
		b6[0] = new int[3];
		b6[0][2] = 5;
		int[][] c6 = new int[][]{
			{1,2,3},
			{4,5},
			{6,7,8,9}
		};
		
		
		int a7[] = new int[]{28,21,38,59,15};
		int[] b7 = Arrays.copyOfRange(a7, 0, 3);
		for(int i:b7){
			System.out.print(i + " ");
		}
		System.out.println();
		
		int a8[] = new int[]{82,29,39,19,23};
		String content = Arrays.toString(a8);
		System.out.println(content);
		
		int a9[] = new int[]{28,29,19,16,3,8};
		System.out.println(Arrays.toString(a9));
		Arrays.sort(a9);
		System.out.println(Arrays.toString(a9));

		
	}
}
